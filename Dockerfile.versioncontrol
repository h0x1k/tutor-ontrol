FROM python:3.11-slim

WORKDIR /app

# Install only git (minimal dependencies)
RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Copy the entire project
COPY . .

# Install version control dependencies
RUN pip install --no-cache-dir -r version_control/requirements.txt

EXPOSE 8001

CMD ["uvicorn", "version_control.main:app", "--host", "0.0.0.0", "--port", "8001"]